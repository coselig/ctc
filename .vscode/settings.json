{
    "cmake.ignoreCMakeListsMissing": true,
    // Git commit message 相關設定
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    // GitHub Copilot commit message 設定
    "github.copilot.enable": {
        "*": true,
        "git-commit": true
    },
    // 設定 commit message 語言為中文
    "scm.inputFontFamily": "Microsoft YaHei, Segoe UI, Tahoma, Geneva, Verdana, sans-serif",
    "git.useIntegratedTerminal": false,
    // Conventional Commits 設定 - 中文化
    "conventionalCommits.scopes": [
        "UI介面",
        "API接口",
        "資料庫",
        "測試",
        "文檔",
        "配置",
        "組件",
        "頁面"
    ],
    "conventionalCommits.gitmoji": true,
    "conventionalCommits.promptBody": true,
    "conventionalCommits.promptFooter": false,
    "conventionalCommits.emojiFormat": "emoji",
    // 如果使用 Git Lens 擴展
    "gitlens.codeLens.enabled": true,
    "gitlens.currentLine.enabled": true,
    // GitHub Copilot 語言設定
    "github.copilot.chat.localeOverride": "zh-TW",
    // Flutter 和 Dart 調試相關設定
    "dart.debugConsole": true,
    "dart.debugSdkLibraries": false,
    "dart.debugExternalPackageLibraries": false,
    "dart.vmAdditionalArgs": [
        "--observe",
        "--pause-isolates-on-start"
    ],
    "dart.flutterHotReloadOnSave": "all",
    "dart.hotReloadOnSave": "all",
    "dart.previewFlutterUiGuides": true,
    "dart.flutterOutline": true,
    "dart.closingLabels": true,
    // 調試輸出設定
    "debug.console.fontSize": 14,
    "debug.console.fontFamily": "Consolas, 'Courier New', monospace",
    "debug.console.wordWrap": true,
    "debug.allowBreakpointsEverywhere": true,
    // Flutter Inspector 設定
    "dart.flutterCreateAndroidLanguage": "kotlin",
    "dart.flutterCreateIOSLanguage": "swift",
    "dart.showInspectorNotificationsForWidgetErrors": true,
    // 自動保存設定（有助於熱重載）
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000
}